<UserControl x:Class="HomeBudget.ViewModel.PieChart.PieChartLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HomeBudget.ViewModel.PieChart"
             xmlns:c="clr-namespace:HomeBudget.ViewModel.PieChart"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <c:PiePlotter Margin="10" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" 
                      HoleSize="0.3"/>
            <c:Legend Margin="10" Height="400" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" />
        </StackPanel>


    </Grid>
</UserControl>
